---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Redefine Guild Website">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>Welcome to Redefine</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	</head>
	<body>
		<header>
			<div class="navbar">
				<div class="nav-logo"><a href="#">REDEFINE</a></div>
				<nav>
					<a href="#">Home</a>
					<a href="#">About</a>
					<a href="#">Progress</a>
					<a href="#">Contact</a>
				</nav>
				<button class="hamburger">
					<div class="bar"></div>
				</button>
		</header>
		<nav class="nav-mobile">
			<a href="#">Home</a>
			<a href="#">About</a>
			<a href="#">Progress</a>
			<a href="#">Contact</a>
		</nav>
		<main>
			<slot />	
		</main>
		<footer>

		</footer>
		<script>
			window.onload = function () {
				const menu_btn = document.querySelector('.hamburger');
				const mobile_menu = document.querySelector('.nav-mobile');
				menu_btn.addEventListener('click', function () {
					menu_btn.classList.toggle('is-active');
					mobile_menu.classList.toggle('is-active');
				});
				window.addEventListener('scroll', function (e) {
					if (window.pageYOffset > 100) {
						document.querySelector("header").classList.add('is-scrolling');
					}
					else {
						document.querySelector("header").classList.remove('is-scrolling');
					}
				})
			}
		</script>
	</body>
</html>

<style is:global>
	:root {

	}
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #0a0a0a;
		color: white;
	}

	body {
		height: 2000px
	}

	.dflex {
		display: flex;
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	li {
		list-style: none;
	}

	a {
		text-decoration: none;
		color: white;
		font-size: 1rem;
	}

	a:hover {
		color: gray;
	}

	h1, h2, h3, h4 {
		margin-bottom: 1rem;
	}
	.container {
		position: relative;
		z-index: 1;
		width: 100%;
		max-width: 1600px;
		margin: 0 auto;
		padding-left: 128px;
		padding-right: 128px;
	}
	

	header {
		color: #FFF;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		z-index: 99;
		/*background-color: #12002F;*/
	}

	header.is-scrolling{
		background-color: #12002F;
	}

	header.is-scrolling .navbar {
		padding-top: 15px;
		padding-bottom: 15px;
	}

	.navbar {
		width: 100%;
		max-width: 1600px;
		margin: 0 auto;
		padding: 32px 128px;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-logo {
		z-index: 99;
	}
	.nav-logo a {
		font-size: 1.8rem;
		font-weight: bold;
	}
		

	nav {
		display: grid;
		grid-gap: 16px;
		grid-template-columns: repeat(4, auto);
	}
	
	.hamburger {
		position: relative;
		display: block;
		width: 35px;
		cursor: pointer;
		z-index: 99;
		
		appearance: none;
		background: none;
		outline: none;
		border: none;
	}

	.hamburger .bar, .hamburger:after, .hamburger:before {
		content: '';
		display: block;
		width: 100%;
		height: 5px;
		background-color: #FFF;
		margin: 6px 0px;
		transition: 0.4s;
	}

	.hamburger.is-active:before {
  		transform: rotate(-45deg) translate(-8px, 6px);
	}

	.hamburger.is-active:after {
		transform: rotate(45deg) translate(-9px, -8px);
	}

	.hamburger.is-active .bar {
		opacity: 0;
	}

	.nav-mobile {
		display: block;
		position: fixed;
		top: 0;
		left: 100%;
		width: 100%;
		height: 100vh;
		z-index: 98;
		background-color: #12002F;
		padding-top: 120px;
		transition: 0.4s;
	}

	.nav-mobile.is-active {
		left: 0;
	}

	.nav-mobile a{
		display: block;
		width: 85%;
		margin: 0 auto 16px;
		text-align: center;
		padding: 12px 16px;
		background-color: #1f103F;
	}

	@media (max-width: 1024px) {
		.navbar{
			padding: 32px 64px;
		}
		.container {
			padding-left: 64px;
			padding-right: 64px;
		}
	}

	@media (max-width: 767px) {
		.navbar{
			padding: 32px 16px;
		}
		nav {
			display: none;
		}
		.container{
			padding-left: 32px;
			padding-right: 32px;
		}
	}

	@media (min-width: 768px) {
		.nav-mobile{
			display: none;
		}
		.hamburger{
			display: none;
		}
	}

</style>
